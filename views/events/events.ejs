<%- include("../_header") -%>

<h1>List of events (<%= model.length %>)</h1>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Event Date</th>
        <th>Event Time</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="/events/create">Add</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const event of model) { %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.description %></td>
          <td><%= event.event_date %></td>
          <td><%= event.event_time %></td>
          <td class="d-print-none">
            <a class="btn btn-sm btn-warning" href="/events/edit/<%= event.event_id %>">Edit</a>
            <a class="btn btn-sm btn-danger" href="/events/delete/<%= event.event_id %>">Delete</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("../_footer") -%>