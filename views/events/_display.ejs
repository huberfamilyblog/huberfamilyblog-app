<div class="form-group row">
    <label class="col-form-label col-sm-2" for="title">Title</label>
    <div class="col-sm-8">
      <input readonly class="form-control" id="title" value="<%= model.title %>" />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="desc">Description</label>
    <div class="col-sm-7">
      <input readonly class="form-control" id="desc" value="<%= model.description %>" />
    </div>
  </div>

  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="date">Date</label>
    <div class="col-sm-7">
      <input readonly class="form-control" id="date" value="<%= model.event_date %>" />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="time">Time</label>
    <div class="col-sm-7">
      <input readonly class="form-control" id="time" value="<%= model.event_time %>" />
    </div>
  </div>