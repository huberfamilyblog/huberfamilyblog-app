<%- include("../_header") -%>

<h1>Update a post</h1>

<form action="/posts/edit/<%= model.post_id %>" method="post">
  <div class="form-horizontal">

    <%- include("_editor") -%>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Update" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/posts">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("../_footer") -%>