<div class="form-group row">
  <label class="col-form-label col-sm-2" for="title">Title</label>
  <div class="col-sm-8">
    <input autofocus class="form-control" id="title" name="title" value="<%= model.title %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="content">Content</label>
  <div class="col-sm-7">
    <input class="form-control" id="content" name="content" value="<%= model.content %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="status">Status</label>
  <div class="col-sm-7">
    <select class="form-control" id="status" value="<%= model.status %>">
        <option value="Published">Published</option>
        <option value="Draft">Draft</option>
    </select>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="img_path">Image</label>
  <div class="col-sm-7">
    <input class="form-control" type="file" name="img_path" value="<%= model.img_path %>" />
  </div>
</div>
<!-- @TODO: Once auth is set up, submit this with user cred id -->
<div class="form-group row">
  <label class="col-form-label col-sm-2" for="author_id">Author Id</label>
  <div class="col-sm-7">
    <input class="form-control" id="author_id" name="author_id" value="1" />
  </div>
</div>

