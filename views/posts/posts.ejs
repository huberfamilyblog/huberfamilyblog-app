<%- include("../_header") -%>

<h1>List of posts (<%= model.length %>)</h1>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Status</th>
        <th>Image</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="/posts/create">Add</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const post of model) { %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= post.status %></td>
          <td><img src="<%= post.img_path %>" alt="img path" style="width: 50px; height: 50px;" /></td>
          <td class="d-print-none">
            <a class="btn btn-sm btn-warning" href="/posts/edit/<%= post.post_id %>">Edit</a>
            <a class="btn btn-sm btn-danger" href="/posts/delete/<%= post.post_id %>">Delete</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("../_footer") -%>