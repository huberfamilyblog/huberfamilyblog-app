<%- include("../_header") -%>

<h1>List of posts (<%= model.length %>)</h1>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col">Status</th>
        <th scope="col">Image</th>
        <th scope="col" class="d-print-none">
          <a class="btn btn-sm btn-success" href="/posts/create">Add</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const post of model) { %>
        <tr>
          <td scope="row"><%= post.title %></td>
          <td scope="row"><%= post.content.substring(0, 100) %>...</td>
          <td scope="row"><%= post.status %></td>
          <td scope="row"><img src="<%= post.img_path %>" alt="<% post.img_path %> " style="width: 50px; height: 50px;" /></td>
          <td scope="row" class="d-print-none">
            <a class="btn btn-sm btn-warning" href="/posts/edit/<%= post.post_id %>">Edit</a>
            <a class="btn btn-sm btn-danger" href="/posts/delete/<%= post.post_id %>">Delete</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("../_footer") -%>